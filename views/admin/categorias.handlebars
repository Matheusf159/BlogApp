<h2>Lista de categorias: </h2>
<hr>
<a href="/admin/categorias/add"><button class="btn btn-success">Nova categoria</button></a>

{{#each categorias}}
    <div class="card mt-4">
        <div class="card-bordy">
            <h4 class="ml-2">{{nome}}</h4>
            <small class="ml-2">Slug: {{slug}}</small> <br>
            <small class="ml-2">Data de criação: {{date}}</small> <br>
            <a href="/admin/categorias/edit/{{_id}}"><button class="btn btn-success mt-4 ml-2">Editar Categoria</button></a>
            <form action="/admin/categorias/deletar" method="POST">
                <input type="hidden" name="id" value="{{_id}}">
                <button type="submit" class="btn btn-danger mt-2 ml-2 mb-2">Deletar categoria</button>
            </form>
        </div>
    </div>
{{else}}
    <h4 class="mt-3">Nenhuma Categoria Registrada!</h4>
{{/each}}